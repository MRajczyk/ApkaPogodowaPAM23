<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="Temperature units">
        <ListPreference
            app:defaultValue="Kelvin"
            app:entries="@array/Temperature_units"
            app:entryValues="@array/Temperature_units_values"
            app:key="Temperature_units"
            app:title="Temperature units"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory
        app:title="Refresh interval (seconds)">
        <ListPreference
            app:defaultValue="15"
            app:entries="@array/Interval_seconds"
            app:entryValues="@array/Interval_seconds_values"
            app:key="Refresh_interval"
            app:title="Refresh interval"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>